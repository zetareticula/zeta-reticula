[workspace]
members = [
    "agentflow-rs",
    "api",
    "attention-store",
    "client",
    "kvquant-rs",
    "llm-rs",
    "master-service",
    "ns-router-rs",
    "p2pstore",
    "protos",
    "quantize-cli",
    "salience-engine",
    "shared",
    "zeta-integration",
    "zeta-sidecar",
    "zeta-vault-synergy"
]
resolver = "2"

[workspace.dependencies]
# Async runtime
tokio = { version = "1", features = ["full", "rt-multi-thread"] }
async-trait = "0.1"
futures = "0.3"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = { version = "1.0", features = ["preserve_order"] }
prost = "0.11"

# Concurrency
crossbeam = "0.8"
dashmap = "5.4"
parking_lot = "0.12"
rayon = "1.8"

# Math and ML
tch = "0.9"
ndarray = "0.15"
rand = { version = "0.8", features = ["small_rng"] }
rand_distr = "0.4"

# Networking
tonic = { version = "0.8", features = ["tls"] }
tokio-stream = { version = "0.1", features = ["net"] }
tokio-util = { version = "0.7", features = ["codec"] }
hyper = { version = "0.14", features = ["server", "http1", "http2", "tcp"] }
http = "0.2"
http-body = "0.4"
tower = { version = "0.4", features = ["util", "timeout"] }

# Web
actix-web = "4"
actix-cors = "0.6"
jsonwebtoken = "8"

# Storage
lru = "0.7"
sqlx = { version = "0.6", features = ["runtime-tokio-native-tls", "postgres", "migrate", "chrono"] }
tokio-postgres = { version = "0.7", features = ["with-chrono-0_4"] }
reed-solomon-erasure = { version = "6.0.0", default-features = false }
# S3-compatible storage support
aws-config = { version = "1.1.0", features = ["behavior-version-latest"] }
aws-sdk-s3 = "1.9.0"
# Consistent hashing for shard distribution
consistent_hash = "0.1.4"

# Security
rustls = "0.21"
rustls-pemfile = "1.0"

# Utilities
anyhow = "1.0"
bytes = "1.0"
chrono = { version = "0.4", features = ["serde"] }
hashbrown = "0.14"
log = "0.4"
thiserror = "1.0"
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }
url = "2.2"
uuid = { version = "1.1", features = ["v4", "serde"] }

# Metrics
metrics = "0.20"
metrics-exporter-prometheus = "0.11"

# Other
clap = { version = "4", features = ["derive"] }
mlua = { version = "0.9", features = ["lua54", "vendored"] }  # Added for Lua integration

[dependencies.p2pstore]
path = "p2pstore"
version = "0.1.0"

[dependencies.zeta-vault-synergy]
path = "zeta-vault-synergy"
version = "0.1.0"

[dependencies.master-service]
path = "master-service"
version = "0.1.0"

[dependencies.attention-store]
path = "attention-store"
version = "0.1.0"

[dependencies.llm_rs]
path = "llm-rs"
version = "0.1.0"

[dependencies.quantize-cli]
path = "quantize-cli"
version = "0.1.0"

[dependencies.agentflow_rs]
path = "agentflow-rs"
version = "0.1.0"

[[bin]]
name = "zeta-infer"
path = "src/bin/zeta-infer.rs"
[workspace]
members = [
    "api",
    "salience-engine",
    "llm-rs",
    "ns-router-rs",
    "kvquant-rs",
    "quantize-cli",
    "agentflow-rs",
    "zeta-integration",
    "p2pstore",
    "zeta-vault-synergy",
    "master-service",
    "client"
]
resolver = "2"

