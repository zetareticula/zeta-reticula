# Master Service Configuration
# Copy this file to .env and update the values as needed

# Network configuration
BIND_ADDR=0.0.0.0:50051  # gRPC server address and port

# Logging
RUST_LOG=info  # error, warn, info, debug, trace

# Node management
NODE_TIMEOUT_SECONDS=300  # 5 minutes before marking a node as stale

# gRPC settings
GRPC_MAX_CONNECTION_AGE=3600  # 1 hour
GRPC_MAX_CONNECTION_AGE_GRACE=300  # 5 minutes

# Metrics (future use)
# METRICS_ENABLED=true
# METRICS_PORT=9090

# Distributed tracing (future use)
# TRACING_ENABLED=false
# TRACING_COLLECTOR_URL=http://jaeger:14268/api/traces

# Authentication (future use)
# AUTH_ENABLED=false
# AUTH_SECRET=your-jwt-secret-here
# AUTH_ISSUER=zeta-reticula-master
# AUTH_AUDIENCE=zeta-reticula-nodes
